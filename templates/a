  <script>
    // Tiny helper: live percentage preview (client-side only)
    const correctEl = document.querySelector('input[name="correct"]');
    const totalEl = document.querySelector('input[name="total"]');
    const out = document.getElementById("quickPct");

    function updatePct(){
      const c = parseFloat(correctEl?.value || "");
      const t = parseFloat(totalEl?.value || "");
      if (!Number.isFinite(c) || !Number.isFinite(t) || t <= 0) {
        out.textContent = "—";
        return;
      }
      const pct = Math.round((c / t) * 1000) / 10; // 1 decimal
      out.textContent = "Preview: " + pct + "%";
    }

    if (correctEl && totalEl){
      correctEl.addEventListener("input", updatePct);
      totalEl.addEventListener("input", updatePct);
      updatePct();
    }
  </script>
